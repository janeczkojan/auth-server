{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
		"outDir": "./lib",
		"charset": "utf-8",
		"removeComments": true
	},
	"include": [
		"src/**/*"
	],
  "exclude": [
    "node_modules"
  ]
}